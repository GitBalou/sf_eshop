{% extends "ShopBundle::base.html.twig" %}

{% block title %}
    {{ parent() }} - Category
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="page-header">
                    <h1>{{ category.title }}</h1>
                    <p>{{ category.description }}</p>
                </div>

                {% for p in products %}
                    <div>
                        <h3>
                            <a href="{{ path('shop_catalog_product', {'categorySlug': category.slug, 'productSlug': p.slug}) }}">
                                {{p.title}}
                            </a>
                        </h3>
                        <span>stock : {{ p.stock }}</span>
                        <span>Date de sortie {{ p.releasedAt | date }}</span>
                    </div>

                    {% if not loop.last %}
                        <hr />
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock content %}
